<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzxcompany.androidstudy.ServiceDemo.ServiceGuanli"
    android:orientation="vertical"
    android:padding="15dp">

    <Button
        android:id="@+id/btn_service_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start方式启动服务"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btn_service_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bind方式启动服务"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btn_service_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="异步消息处理机制"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btn_service_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btn_service_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="利用Service实现下载"
        android:textAllCaps="false" />
</LinearLayout>
